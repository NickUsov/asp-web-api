@using WebApplication9.Models;
@model IEnumerable<Person>
<div class="card-header">
    List of Persons
</div>
<div class="card-body">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Married</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(Person person in Model)
            {
            <tr>
                <td>
                    @person.Id
                </td>
                <td>
                    @person.Name
                </td>
                <td>
                    @person.Age
                </td>
                <td>
                   @( person.Married?"Yes":"No")
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { Id=person.Id}, new { @class="btn btn-primary btn-sm"})
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
